<MyButton>
    size_hint:.1,None
    height:self.width
    background_normal:''
    background_color:[0,0,0,.5]
    on_pos:root.bg_fader()
    canvas.before:
        Color:
            rgba:0,0,0,0
        RoundedRectangle:
            pos:self.pos
            size:self.size
            radius:[10]

<DrawScreen>
    md_bg_color:[.1,.1,.1,1]
    MyScatterLayout:
        id:sctr
        auto_bring_to_front:False
        do_translation:False
        size_hint:1,1
        pos:root.pos
        TheMainCanvas:
            id:sctrchild
            canvas.before:
                Color:
                    rgba:[0,0,0,1]
                Rectangle:
                    size:self.size
                    pos:self.pos
            text:' '
            font_size:300
            pos:root.pos
            size_hint:1,1
    FloatLayout:
        id:scroll_view
        size_hint:.97,None
        pos_hint:{'center_x':.5}
        height:30
        on_size:
            root.on_bottom_sheet_size(self.height)
        canvas.before:
            Color:
                rgba:[1,1,1,.1]
            RoundedRectangle:
                radius:[20,20,0,0]
                size:self.size
                pos:self.pos
        BoxLayout:
            pos_hint:{'center_x':.5}
            orientation:'vertical'
            BoxLayout:
                size_hint:None,None
                height:self.minimum_height
                orientation:'vertical'
                pos_hint:{'center_x':.5,'top':1}
                Widget:
                    size_hint:None,None
                    size:50,15
                BottomSheetWidget:
                    size_hint:None,None
                    pos_hint:{'center_x':.5}
                    size:50,8
                    on_pos:self.color_fader()
                Widget:
                    size_hint:None,None
                    size:50,10
            ScrollView:
                pos_hint:{'center_x':.5}
                size_hint_x:.95
                GridLayout:
                    pos_hint:{'center_x':.5}
                    cols:4
                    spacing:10
                    MyButton:
                        text:'save'
                    MyButton:
                        text:'reset-size'
                    MyButton:
                        text:'lock_canvass'
                    MyButton:
                        text:'new_layer'
                    MyButton:
                        text:'color'
                    MyButton:
                        text:'tools'
                    MyButton:
                        text:'brush'
                    MyButton:
                        text:'insert'
                    MyButton:
                        text:'effects'