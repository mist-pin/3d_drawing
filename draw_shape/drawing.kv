<MyButton@Button>
    size_hint:.1,.1
    size_hint:None,None
#    size:self.texture_size

<DrawScreen>
    md_bg_color:[.1,.1,.1,1]
    MyScatterLayout:
        id:sctr
        auto_bring_to_front:False
        do_translation:False
        size_hint:1,1
        pos:root.pos
        TheMainCanvas:
            id:sctrchild
            canvas.before:
                Color:
                    rgba:[0,0,0,1]
                Rectangle:
                    size:self.size
                    pos:self.pos
            text:' '
            font_size:300
            pos:root.pos
            size_hint:1,1
    FloatLayout:
        canvas.before:
            Color:
                rgba:[1,1,1,.1]
            RoundedRectangle:
                radius:[20,20,0,0]
                size:self.size
                pos:self.pos
        id:scroll_view
        size_hint:.97,None
        pos_hint:{'center_x':.5}
        BoxLayout:
            pos_hint:{'center_x':.5}
            orientation:'vertical'
            padding:[10]
            BoxLayout:
                size_hint:None,None
                height:self.minimum_height
                orientation:'vertical'
                pos_hint:{'center_x':.5,'top':1}
                Widget:
                    size_hint:None,None
                    size:50,15
                BottomSheetWidget:
                    canvas.before:
                        Color:
                            rgba:[1,1,1,1]
                        RoundedRectangle:
                            radius:[4]
                            size:self.size
                            pos:self.pos
                    size_hint:None,None
                    pos_hint:{'center_x':.5}
                    size:50,8
                Widget:
                    size_hint:None,None
                    size:50,20
            GridLayout:
                pos_hint:{'center_x':.5}
                canvas.before:
                    Color:
                        rgba:[1,1,1,1]
                    RoundedRectangle:
                        radius:[4]
                        size:self.size
                        pos:self.pos
#                size_hint:None,None
                cols:3
                spacing:20
                halign:'center'
                MyButton:
                    text:'save'
                    on_press:sctrchild.export_to_png('hlo.png')
                MyButton:
                    text:'reset-size'
                    on_press:root.reset(sctr)
                MyButton:
                    text:'lock_canvass'
                MyButton:
                    text:'new_layer'
                MyButton:
                    text:'color'
                MyButton:
                    text:'tools'
                MyButton:
                    text:'brush'
                MyButton:
                    text:'insert'
                MyButton:
                    text:'effects'